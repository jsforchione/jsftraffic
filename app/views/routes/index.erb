<table class="table table-hover">
  <thead>
  <tr>
    <th>Departure Time</th>
    <th>From</th>
    <th>To</th>
    <th>Duration</th>
    <th>Distance</th>
  </tr>
</thead>
<tbody>
  <% @routes.each do |route| %>
  <tr>
    <td><%= route.departure_time %></td>
    <td><%= route.origin %></td>
    <td><%= route.destination %></td>
    <td><%= route.duration_text %></td>
    <td><%= route.distance_text %></td>
  </tr>
  <% end %>
</tbody>
</table>